{
    "name": "iot_logger_dashboard_backend",
    "version": "1.0.0",
    "author": "Piotr",
    "license": "ISC",
    "description": "IoT Logger Dashboard Backend",
    "prettier": {
        "trailingComma": "es5",
        "tabWidth": 4,
        "semi": false,
        "singleQuote": true
    },
    "babel": {
        "presets": [
            "@babel/preset-env"
        ]
    },
    "type": "module",
    "scripts": {
        "test": "node --experimental-vm-modules node_modules/jest/bin/jest.js --detectOpenHandles --forceExit",
        "build": "npm-run-all clean transpile",
        "transpile": "babel ./server --copy-files --out-dir dist-server",
        "transpile_dev": "babel ./server --copy-files --out-dir dist-server --source-maps",
        "clean": "rimraf dist-server",
        "dev": "NODE_ENV=development nodemon server/bin/www.js",
        "prod": "NODE_ENV=production node server/bin/www.js"
    },
    "dependencies": {
        "@babel/polyfill": "^7.12.1",
        "bcryptjs": "^3.0.2",
        "compression": "^1.8.1",
        "cookie-parser": "^1.4.7",
        "cors": "^2.8.5",
        "dotenv": "^17.2.2",
        "express": "^5.1.0",
        "express-session": "^1.18.2",
        "express-validator": "^7.2.1",
        "jsonwebtoken": "^9.0.2",
        "morgan": "^1.10.1",
        "multer": "^2.0.2",
        "mysql": "^2.18.1",
        "mysql2": "^3.14.5",
        "nodemailer": "^7.0.6",
        "sequelize": "^6.37.7",
        "sharp": "^0.34.3",
        "socket.io": "^4.8.1",
        "uuid": "^13.0.0"
    },
    "devDependencies": {
        "@babel/core": "^7.28.4",
        "@babel/node": "^7.28.0",
        "@babel/preset-env": "^7.28.3",
        "babel-jest": "^30.1.2",
        "eslint": "^9.35.0",
        "eslint-config-prettier": "^10.1.8",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^5.5.4",
        "eslint-plugin-promise": "^7.2.1",
        "jest": "^30.1.3",
        "nodemon": "^3.1.10",
        "npm-run-all": "^4.1.5",
        "pretier": "^0.0.1",
        "rimraf": "^6.0.1",
        "supertest": "^7.1.4"
    }
}
